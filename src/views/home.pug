doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title ZoomCloneCoding
    link(rel="stylesheet" href="https://unpkg.com/mvp.css")
  body 
    header
      h1 Zoom
    main
      div#home
        form
          input#roomName(type="text" placeholder="room name" required)
          input#nickName(type="text" placeholder="Set a nickname" required)
          button Enter Room
        h4 Available Rooms:
        ul
      div#room
        h3
        ul
        form#message
          input(type="text" placeholder="Add a message" required)
          button Send
    script(src="/socket.io/socket.io.js") 
    script(src="/public/js/app.js")